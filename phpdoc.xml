<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>ComposerRepoTool</title>
    <parser>
        <target>build/phpdoc</target>
        <encoding>utf8</encoding>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>

        <visibility />
    </parser>

    <transformer>
        <target>docs/phpdoc</target>
    </transformer>

    <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>

    <transformations>
        <template name="responsive" />
    </transformations>

    <files>
        <directory>src</directory>
    </files>

</phpdoc>
